<?php




$temperature = 22;   // Temperature in Celsius
$day = 3;            // Day as a number (1 = Monday, 2 = Tuesday, ...)




echo "<h3>Temperature Check:</h3>";

if (!is_numeric($temperature)) {
    echo "Invalid temperature value! Please enter a number.<br><br>";
} else {


    if ($temperature < 10) {
        echo "It's cold.<br><br>";
    } elseif ($temperature >= 10 && $temperature <= 25) {
        echo "It's warm.<br><br>";
    } else {
        echo "It's hot.<br><br>";
    }
}




echo "<h3>Day of the Week:</h3>";

if (!is_numeric($day) || $day < 1 || $day > 7) {
    echo "Invalid day value! Please enter a number between 1 and 7.<br>";
} else {

    // Switch-case block
    switch ($day) {
        case 1:
            echo "Monday";
            break;
        case 2:
            echo "Tuesday";
            break;
        case 3:
            echo "Wednesday";
            break;
        case 4:
            echo "Thursday";
            break;
        case 5:
            echo "Friday";
            break;
        case 6:
            echo "Saturday";
            break;
        case 7:
            echo "Sunday";
            break;
        default:
            echo "Invalid day!";
    }
}

?>