<?php


function sum($a, $b) {
    return $a + $b;
}

echo "<h3>Sum Function:</h3>";
echo "Sum of 5 and 10: " . sum(5, 10) . "<br>";
echo "Sum of 12 and 3: " . sum(12, 3) . "<br><br>";




function factorial($n) {
    if ($n <= 1) {
        return 1;
    }
    return $n * factorial($n - 1);
}

echo "<h3>Factorial Function:</h3>";
echo "Factorial of 5 is: " . factorial(5) . "<br><br>";


function is_prime($n) {
    if ($n <= 1) {
        return false;
    }

    for ($i = 2; $i <= sqrt($n); $i++) {
        if ($n % $i == 0) {
            return false;
        }
    }

    return true;
}

echo "<h3>Prime Number Check:</h3>";

$numbers = [2, 4, 7, 9, 13, 15];

foreach ($numbers as $num) {
    if (is_prime($num)) {
        echo "$num is a prime number.<br>";
    } else {
        echo "$num is not a prime number.<br>";
    }
}

?>