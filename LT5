<body>

    <h2>Text Analyzer Tool</h2>

    <textarea id="inputText" placeholder="Type or paste your text here..."></textarea>

    <button onclick="analyzeText()">Analyze Text</button>

    <div id="result">
        <div class="item"><strong>Total Characters:</strong> <span id="charCount"></span></div>
        <div class="item"><strong>Total Words:</strong> <span id="wordCount"></span></div>
        <div class="item"><strong>Reversed Text:</strong></div>
        <div class="rev-box" id="reverseText"></div>
    </div>

    <script>
        function analyzeText() {
            let text = document.getElementById("inputText").value.trim();

            // Handle empty input
            if (text === "") {
                alert("Please enter some text.");
                return;
            }

            // Character count
            let characters = text.length;

            // Word count (ignore empty strings from multiple spaces)
            let words = text.split(/\s+/).filter(word => word !== "").length;

            // Reverse text using split -> reverse -> join
            let reversed = text.split("").reverse().join("");

            // Display results
            document.getElementById("charCount").innerText = characters;
            document.getElementById("wordCount").innerText = words;
            document.getElementById("reverseText").innerText = reversed;

            document.getElementById("result").style.display = "block";
        }
    </script>

</body>
