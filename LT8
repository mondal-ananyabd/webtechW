<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic Form Field Display</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 30px;
            background: #f0f0f0;
        }

        .form-box {
            background: white;
            padding: 25px;
            border-radius: 8px;
            width: 350px;
            margin: auto;
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        }

        label {
            font-weight: bold;
        }

        input, select {
            width: 100%;
            padding: 8px;
            margin-top: 8px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
    </style>
</head>

<body>

    <h2 style="text-align:center;">Smart Registration Form</h2>

    <div class="form-box">
        <label for="userType">Select User Type</label>
        <select id="userType" onchange="toggleFields()">
            <option value="">-- Choose One --</option>
            <option value="student">Student</option>
            <option value="teacher">Teacher</option>
        </select>

        <!-- Hidden initially -->
        <div id="rollDiv" style="display:none;">
            <label>Roll Number</label>
            <input type="text" id="roll" placeholder="Enter Roll Number">
        </div>

        <div id="deptDiv" style="display:none;">
            <label>Department</label>
            <input type="text" id="department" placeholder="Enter Department">
        </div>
    </div>

    <script>
        function toggleFields() {
            let userType = document.getElementById("userType").value;

            if (userType === "student") {
                document.getElementById("rollDiv").style.display = "block";
                document.getElementById("deptDiv").style.display = "none";
            } 
            else if (userType === "teacher") {
                document.getElementById("rollDiv").style.display = "none";
                document.getElementById("deptDiv").style.display = "block";
            } 
            else {
                // if no option selected
                document.getElementById("rollDiv").style.display = "none";
                document.getElementById("deptDiv").style.display = "none";
            }
        }
    </script>

</body>
</html>
